{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "lib": [
        "es2019"
      ],
      
      "allowJs": true,
      
      "baseUrl": "./",
      "paths": {
        "$/*": ["./src/*"],
      },
      
      "typeRoots": [
        "@types",
        "./node_modules/@types"
      ],
      
      "outDir": "./dist",
      "declaration": true,
      "sourceMap": true,
      "removeComments": false,
      "incremental": true,
      "skipLibCheck": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noImplicitOverride": true,
      // "importsNotUsedAsValues": "error",
      
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules",
      "src/**/*.spec.ts",
      "src/**/*.d.ts",
    ]
  }
  