{
  "extends": "@v-ed/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    
    "moduleResolution": "node",
    
    "allowJs": true,
    
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    
    "outDir": "./dist",
    
    "importHelpers": false,
    "incremental": false,
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
  ]
}