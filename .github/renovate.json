{
	"extends": [
		"config:base"
	],
	"labels": [
		"dependencies"
	],
	"commitMessagePrefix": "[Renovate] ",
	"automergeType": "branch",
	"packageRules": [
		{
			"updateTypes": [
				"minor",
				"patch",
				"pin",
				"digest"
			],
			"automerge": true
		},
		{
			"depTypeList": [
				"devDependencies"
			],
			"automerge": true
		}
	],
	"ignoreDeps": ["@prisma/client"],
	"schedule": [
		"after 1am on Monday",
		"before 7am on Monday"
	]
}